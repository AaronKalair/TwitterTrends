source :rubygems

gem 'sinatra', '1.1.0'
gem 'thin'
gem 'haml'
gem 'geokit' # For working with coordinates
gem 'twitter' # For working with the twitter REST API
gem 'tweetstream' # For working with the twitter streaming API
